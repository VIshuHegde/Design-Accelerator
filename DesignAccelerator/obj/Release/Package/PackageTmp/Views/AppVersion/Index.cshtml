@using DesignAccelerator.Models.ViewModel
@model AppVersionViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@*<div class="navbar-static-top">
    <ul class="breadcrumb"></ul>
</div>
<div>
