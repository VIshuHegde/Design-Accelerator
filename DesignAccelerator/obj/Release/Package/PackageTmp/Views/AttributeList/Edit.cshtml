@using DesignAccelerator.Models.ViewModel
@model AttributeListViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Edit Attribute List</h4>
        <hr />

        @*@Html.AntiForgeryToken()*@
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.AttributeID)
        @Html.HiddenFor(m => m.daId)
        
        <div class="form-group">
            @Html.LabelFor(m => m.AttributeDesc, "Attribute Name", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.AttributeDesc, new { htmlAttributes = new { @maxlength = "30", @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(m => m.AttributeDesc, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            
            @Html.LabelFor(m => m.AttributeTypeID, "Attribute Type", htmlAttributes: new { @class = "col-sm-2 control-label" })
            <div class="col-md-10">
                <label radio="inline">
                    @*@foreach (var a in (IEnumerable<DesignAccelerator.Models.ViewModel.AttributeListViewModel>)ViewBag.AttributeListViewModel)*@
                     
                        @Html.EditorFor(m => m.CommonAttributeTypeID )
                        <span>Common</span>

                        @Html.EditorFor(m => m.CriticalAttributeTypeID )
                        <span>Critical</span>
                </label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default btn-group-sm" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "Index")
</div>
