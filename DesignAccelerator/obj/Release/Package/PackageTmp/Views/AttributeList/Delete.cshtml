@using DesignAccelerator.Models.ViewModel
@model AttributeListViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Delete Attribute List Input</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.AttributeID)

        <div class="form-group">
            @Html.LabelFor(m => m.AttributeDesc, "Attribute Name", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.AttributeDesc, new { @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(m => m.AttributeDesc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.AttributeTypeDesc, "Attribute Type", htmlAttributes: new { @class = "col-sm-2 control-label" })
            <div class="col-md-10">
                <label radio="inline">

                    @Html.EditorFor(m => m.CommonAttributeTypeID)
                    <span>Common</span>

                    @Html.EditorFor(m => m.CriticalAttributeTypeID)
                    <span>Critical</span>

                </label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="btnDelete" value="Delete" class="btn btn-default btn-group-sm " />
                @*<input type="submit" value="Cancel" onclick="Cancel()" class="btn btn-warning" />*@
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "Index")
</div>