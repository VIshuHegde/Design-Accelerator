@using DesignAccelerator.Models.ViewModel
@model ModuleViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Edit Module</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.ApplicationID)
        @Html.HiddenFor(m => m.ModuleId)
        
        <div class="form-group">
            @Html.LabelFor(m => m.ModuleName, "Module Name", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.ModuleName, new { htmlAttributes = new  { @maxlength = "30", @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(m => m.ModuleName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default btn-group-sm" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "Index")
</div>

<script type="text/javascript">
</script>
