@model DesignAccelerator.Models.ViewModel.BuzProdViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Edit Business Product</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.BuzProdID)
        @Html.HiddenFor(model => model.daId)

        <div class="form-group">
            @Html.LabelFor(model => model.BuzProdDesc, "Business Product", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BuzProdDesc, new { htmlAttributes = new { @maxlength = "50", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BuzProdDesc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "Index")
</div>
